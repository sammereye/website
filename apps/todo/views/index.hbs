<div class="container">
  <div class="login">
    <h1>Login</h1>
    <form method="POST" action="/todo/login">
      <label for="email">Email</label><br>
      <input type="email" id="email" name="email" placeholder="e.g. john@doe.com" required><br>
      <label for="password">Password</label><br>
      <input type="password" id="password" name="password" placeholder="••••••••" required><br>
      <button type="submit">Login</button>
    </form>
    <div class="createAccountLink">Don't have an account? <a style="font-weight: 700;" href="/todo/createAccount">Create one</a></div>
  </div>
</div>
